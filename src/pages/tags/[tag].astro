---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogPreview from '../../components/BlogPreview.astro';
import { siteConfig } from '@/siteConfig';
import { getCollection } from 'astro:content';
import { sortPostsByDate } from '../../utils/posts';

export async function getStaticPaths() {
  // Only use your fixed tag list
  return siteConfig.homepage.tags.map((tag) => ({
    params: { tag },
    props: { tag },
  }));
}

const { tag } = Astro.params;
const posts = await getCollection('blog');

// Right now: showing ALL posts for every tag
// If you want to filter posts manually later, we can adjust here.
const sortedPosts = sortPostsByDate(posts);
---

<BaseLayout title={`Posts tagged with #${tag}`}>
  <h1 class="text-4xl font-bold mb-8 text-gray-900 dark:text-white">Posts tagged with #{tag}</h1>
  <section>
    {sortedPosts.map((post) => <BlogPreview post={post} />)}
  </section>
</BaseLayout>
